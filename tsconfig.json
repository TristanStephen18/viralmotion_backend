  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types"],
    "types": ["node", "passport"],
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true
  }
